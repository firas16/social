{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>

                <th>course</th>
                <th>teacher</th>
                <th>description</th>
                <th>date</th>
            </tr>
            </thead>
            <tbody>
            {% for cours in lessons %}
                <tr>
                    <th scope ="row">{{ cours.id }}</th>

                    <td>{{ cours.course.name }}</td>
                    <td>{{ cours.teacher.id }}</td>
                    <td>{{ cours.description }}</td>
                    <td>{{ cours.date | date }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>



{% endblock %}